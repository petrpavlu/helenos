{
        name : context,

        includes : [
                {
                        include : <stddef.h>
                },
                {
                        include : <stdint.h>
                }
        ],

        #
        # Fibril context containing registers that must be preserved across
        # function calls.
        #
        members : [
                {
                        name : sp,
                        type : uint64_t
                },
                {
                        name : pc,
                        type : uint64_t
                },

                {
                        name : x19,
                        type : uint64_t
                },
                {
                        name : x20,
                        type : uint64_t
                },
                {
                        name : x21,
                        type : uint64_t
                },
                {
                        name : x22,
                        type : uint64_t
                },
                {
                        name : x23,
                        type : uint64_t
                },
                {
                        name : x24,
                        type : uint64_t
                },
                {
                        name : x25,
                        type : uint64_t
                },
                {
                        name : x26,
                        type : uint64_t
                },
                {
                        name : x27,
                        type : uint64_t
                },
                {
                        name : x28,
                        type : uint64_t
                },
                {
                        name : x29,  # Frame Pointer
                        type : uint64_t
                },

                {
                        name : tls,
                        type : uint64_t
                }
        ]
}
